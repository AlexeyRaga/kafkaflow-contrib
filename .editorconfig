root = true

[*]
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length=140
indent_size = 4
indent_style = space
end_of_line = lf

[*.cs]
resharper_csharp_place_expr_method_on_single_line = never

# Terraform files
[*.tf]
indent_size = 2

[*.json]
indent_size = 2

[*.{yaml,yml}]
indent_size = 2


[*.csproj]
indent_size = 2
